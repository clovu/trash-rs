{
  // ===================== Formatter Configs =====================
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
    "editor.formatOnSave": true
  },
  "[rust]": {
    "editor.formatOnSave": true,
  },
